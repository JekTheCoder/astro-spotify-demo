<div class="home-layout layout gap-2">
  <slot name="aside" />
  <slot name="main" />
  <slot name="player" />
</div>

<style>
  .layout {
    display: grid;
    grid-template-areas:
      "aside main"
      "player player";

    grid-template-columns: 350px 1fr;
    grid-template-rows: 1fr auto;
  }
</style>

<style is:global>
  .home-layout > *:nth-child(1) {
    grid-area: aside;
  }

  .home-layout > *:nth-child(2) {
    grid-area: main;
  }

  .home-layout > *:nth-child(3) {
    grid-area: player;
  }
</style>
